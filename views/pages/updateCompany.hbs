{{> header}}
<div class="container">
    <div class="row mt-3 justify-content-center">
        <div class="col-6">
            <form action="/blog/update/{{blog.id}}?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="exampleFormControlInput1">Company Name</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" name="blogTitle" value="{{blog.title}}">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Company Desciption</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"
                        name="blogContent">{{blog.content}}</textarea>
                </div>
                <button type="submit" class="btn btn-dark">Save</button>
            </form>
        </div>
    </div>
</div>