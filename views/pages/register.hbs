<div class="container-fluid custom-container">
        <div class="row justify-content center">
          <div class="col-md-4 col-sm-4 col-xs-12"></div>
          <div class="col-md-4 col-sm-4 col-xs-12">
             <form action="/users/register" method="POST">
               <h1><center>Register</center></h1>
                   <div class="form-group custom-form-group">
                      <label for="exampleInputEmail1">User Name</label>
                      <input type="text" name="name" class="form-control" id="name" aria-describedby="emailHelp" placeholder="Enter your name">
                   </div>
                   <div class="form-group custom-form-group">
                      <label for="exampleInputEmail1">Email Id</label>
                      <input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter your email">
                   </div>
                  <div class="form-group custom-form-group">
                     <label for="exampleInputPassword1">Password</label>
                     <input type="password" name="password" class="form-control" id="password" placeholder=" Enter your password">
                  </div>
                  <div class="form-group custom-form-group">
                     <label for="exampleInputPassword1">Current Company</label>
                     <input type="text" name="curr_company" class="form-control" id="curr_company" placeholder=" your current company">
                  </div>
                  
                  
                  <button type="submit" value="Register" class="btn btn-success btn-block">Register</button>
              </form>
           </div>
         </div>
       </div>
      </div>

